---
import PersonalWebPage from "../layouts/Layout.astro";
import image from '../public/1591691010208.jpg'   
---

<PersonalWebPage title="Álvaro Casas Martínez" />
<style>
    .card-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

    .card {
        border: 1px solid #ccc;
        padding: 20px;
        width: 300px;
        margin: 20px;
        box-shadow: 0 0 5px rgba(121, 121, 121, 0.1);
        text-align: center;
        background-color: #cccccc27;
    }

    .card h2 {
        margin-top: 0;
    }

    .logo {
        max-width: 100%;
        height: auto;
        margin-bottom: 10px;
    }
    .card ul{
        text-align: justify;
        align-items: 20px;

    }
    .card a{
        color: rgb(233, 233, 233);
    }
</style>

<div class="card-container">
    <div class="card">
        <img
            src="../public/thumbnail-social.jpg"
            alt="Logo BV"
            width="300"
            class="logo"
        />
        <div>
            <h4>
                <a href="https://www.bottegaveneta.com/en-es"
                    ><strong>Bottega Veneta</strong> </a><p>May - Sep 2023</p>
            </h4>
            <ul>
                <li>Sales skills</li>
                <li>Cash handling</li>
            </ul>
        </div>
    </div>
    
    <div class="card">
        <img
            src="../public/adelte.600x0.jpg"
            alt="Logo adelte"
            width="300"
            class="logo"
        />
        <div>
            <h4>
                <a href="https://www.adelte.com/"
                    ><strong>ADELTE</strong> The Boarding Company. </a> <p>Oct 2022 - Jan 2023</p>
            </h4>
            <ul>
                <li>Production of technical drawings and small CAD designs.</li>
                <li>Study of potential customer offers</li>
                <li>General technical office work</li>
            </ul>
        </div>
    </div>

    <div class="card">
        <img
            src={image}
            alt="Logo cortefiel"
            width="300"
            class="logo"
        />
        <div>
            <h4>
                <a href="https://cortefiel.com/es/es"
                    ><strong>CORTEFIEL</strong> </a> <p>May 2022 - Oct 2022</p>
            </h4>
            <ul>
                <li>Customer service</li>
                <li>Basic cash flow concepts</li>
            </ul>
        </div>
    </div>
</div>
